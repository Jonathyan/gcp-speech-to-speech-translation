# Phase 2 Hybrid STT Service - Production Configuration

# Google Cloud Configuration
GOOGLE_CLOUD_PROJECT=your-project-id
GOOGLE_APPLICATION_CREDENTIALS=/app/credentials/service-account.json

# Phase 2 Hybrid STT Configuration
ENABLE_STREAMING=true
QUALITY_THRESHOLD=0.7
STREAMING_TIMEOUT=5.0

# Streaming Parameters
STREAMING_THRESHOLD_BYTES=5000
BUFFERED_TIMEOUT_SECONDS=2.0
FREQUENCY_THRESHOLD_PER_SECOND=8.0

# Fallback Configuration
FAILURE_THRESHOLD=3
RECOVERY_INTERVAL_SECONDS=60.0
MAX_RECOVERY_ATTEMPTS=5

# Connection Quality
MEASUREMENT_WINDOW_SECONDS=10.0
MAX_CONCURRENT_SESSIONS=20

# Cloud Run Configuration
PORT=8080
WORKERS=1

# Logging and Monitoring
LOG_LEVEL=INFO
ENABLE_CLOUD_LOGGING=true
ENABLE_MONITORING=true
METRICS_PORT=9090

# Google Cloud API Timeouts
STT_TIMEOUT_S=10.0
TRANSLATION_TIMEOUT_S=10.0
TTS_TIMEOUT_S=10.0

# Circuit Breaker Configuration
CIRCUIT_BREAKER_FAIL_MAX=5
CIRCUIT_BREAKER_RESET_TIMEOUT_S=30

# Retry Configuration  
API_RETRY_ATTEMPTS=3
API_RETRY_WAIT_MULTIPLIER_S=1
PIPELINE_TIMEOUT_S=15.0